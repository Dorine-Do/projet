{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/instructor/dashboard.css') }}">
{% endblock %}

{% block title %}{{ 'header.dashboard'|trans }}{% endblock %}

{% block body %}

    <h1 class="titleDashboard">- {{ 'header.dashboard'|trans }} -</h1>

    <section class="sectionChoice" id="section-session">
        <p class="title">
            Session
        </p>
        <ul class="sessionChoice">
            {% for session in sessions %}
                <li class="liSession">
                    <input class="nameSession" id="{{ session.name }}" type="radio" name="session" value="{{ session.id }}"><label for="{{ session.name }}">{{ session.name }}</label>
                </li>
            {% endfor %}
        </ul>
    </section>

    <section class="sectionChoice" id="section-module">
        <h4 class="title">Niveau</h4>
        <div class="level">
            <select class="selectVarFond" id="module-choice" name="module">
                <option value="0">{{ 'title.selectModule'|trans }}</option>
            </select>
            <ul class="choiceLevel">
                <li class="liLevel">
                    <input class="nameLevel" id="allLevel" type="radio" name="level" value="0"><label for="allLevel">{{ 'button.allLevels'|trans }}</label>
                </li>
                <li class="liLevel">
                    <input class="nameLevel" id="decouvre" type="radio" name="level" value="1"><label for="decouvre">{{ 'title.decouvre'|trans }}</label>
                </li>
                <li class="liLevel">
                    <input class="nameLevel" id="explore" type="radio" name="level" value="2"><label for="explore">{{ 'title.explore'|trans }}</label>
                </li>
                <li class="liLevel">
                    <input class="nameLevel" id="maitrise" type="radio" name="level" value="3"><label for="maitrise">{{ 'title.maitrise'|trans }}</label>
                </li>
                <li class="liLevel">
                    <input class="nameLevel" id="domine" type="radio" name="level" value="4"><label for="domine">{{ 'title.domine'|trans }}</label>
                </li>
            </ul>
        </div>

    </section>

    <section class="sectionChoice" id="section-students">
        <h4 class="title">{{ 'title.studentList'|trans }}</h4>
        <div class="students">
            <div class="studentsList">
                <ul class="ulListStudents"></ul>
            </div>
        </div>
    </section>

    <section class="sectionChoice" id="section-qcms">
        <h4 class="title">{{ 'qcm.done'|trans }}</h4>
        <div class="qcms">
            <div class="QcmsList" id="qcms-list">
                <ul class="ulListQcms"></ul>
            </div>
        </div>
    </section>

{% endblock %}

{% block javascripts %}
    <script>
        let decouvre = "{{asset('build/images/arbre_decouvre.png')}}";
        let explore = "{{asset('build/images/arbre_explore.png')}}";
        let maitrise = "{{asset('build/images/arbre_maitrise.png')}}";
        let domine = "{{asset('build/images/arbre_domine.png')}}";
    </script>
    <script type="text/javascript" src="{{ asset('js/instructor/dashboard.js') }}"></script>

{% endblock %}
