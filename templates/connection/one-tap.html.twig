
{% block stylesheets %}
    <link href="{{asset('css/connection.css')}}" rel="stylesheet">
{% endblock %}


{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <main class="containerConnection">
        <div class="blocLeft">
            <div class="logoAndTypeOfApplication">
                <div class="logo"><img src=""/></div>
                <p class="typeOfApplication">Mon interface apprenant</p>
            </div>
            <div class="partOfApplication">
                <h1>- CONNEXION -</h1>
            </div>
            <div></div>
        </div>
        <div class="blocRight">
            <div class="blocWhite">
                <div class="formConnection">

                    <div class="blocBtnSubmit">
                        <form id="login-form" action="{{ path('app_connection') }}" method="post">
                            {% if error %}
                                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                            <div class="emailBlock">
                                <label for="username">Email</label>
                                <input type="text" id="username" name="_username" value="{{ last_username }}"/>

                                <button class="nextBtn hideConnectionElement">Suivant</button>
                                <button class="oneTapBtn hideConnectionElement">Se connecter avec google</button>

                            </div>

                            <div class="passwordBlock hideConnectionElement">
                                <label for="password">Password</label>
                                <input type="password" id="password" name="_password"/>
                                <div>
                                    <button class="prevBtn">Précédent</button>
                                    <button type="submit">login</button>
                                </div>
                            </div>

                            <input type="hidden" name="_target_path" value="/dashboard/check"/>

                        </form>
                    </div>

                </div>
            </div>
        </div>

    </main>
   
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/connection.js') }}"></script>
{% endblock %}
