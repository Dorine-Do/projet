        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <main class="containerConnection">
        <div class="blocLeft">
            <div class="logoAndTypeOfApplication">
                <div class="logo"><img src=""/></div>
                <p class="typeOfApplication">{{ 'general.studentInterface'|trans }}</p>
            </div>
            <div class="partOfApplication">
                <h1>- {{ 'title.bigConnection'|trans }} -</h1>
            </div>
            <div></div>
        </div>
        <div class="blocRight">
            <div class="blocWhite">
                <div class="formConnection">

                    <div class="blocBtnSubmit">
                        <a href="https://login.3wa.io/youup">{{ 'button.connect'|trans }}</a>
                    </div>

                </div>
            </div>
        </div>
    </main>
   
