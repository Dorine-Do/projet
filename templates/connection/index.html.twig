
{% block stylesheets %}
    <link href="{{asset('css/connection.css')}}" rel="stylesheet">
{% endblock %}


{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <main class="containerConnection">
        <div class="blocLeft">
            <div class="logoAndTypeOfApplication">
                <div class="logo"><img src=""/></div>
                <p class="typeOfApplication">Mon interface apprenant</p>
            </div>
            <div class="partOfApplication">
                <h1>- CONNEXION -</h1>
            </div>
            <div></div>
        </div>
        <div class="blocRight">
            <div class="blocWhite">
                <form action="{{ path('app_connection') }}" method="post" class="formConnection">
                    <div class="blocEmail"> 
                        <label for="username" hidden>Email:</label>
                        <input type="text" id="username" name="_username" value="{{ last_username }}" placeHolder="Email"/>
                    </div>
                    <div class="blocPassword"> 
                        <label for="password" hidden>Password:</label>
                        <input type="password" id="password" name="_password"placeHolder="Mot de passe"/>
                    </div>
                   
                        <div class="blocError"> 
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            <input type="hidden" name="_target_path" value="/dashboard/check"/>
                        </div>
                   
                    <div class="blocBtnSubmit"> 
                        <button type="submit">Se connecter</button>
                    </div>
                </form>
            </div>
        </div>
    </main>
   
{% endblock %}
