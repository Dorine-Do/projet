{% extends 'base.html.twig' %}

{% block title %}Admin | QCMs{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/admin/admin_lists.css') }}">
{% endblock %}

{% block body %}

    <main class="admin_content">

        <section>
            <h1>Gestion des utilisateurs</h1>
        </section>

        <section class="tableContainer">
{#            <div class="createBtnContainer">#}
{#                <a href="{{ path('') }}" class="greenButton">Ajouter un utilisateur</a>#}
{#            </div>#}
            <table id="tableToSort" class="qcmsTable">
                <thead>
                    <tr>
                        <th>Utilisateur</th>
                        <th>Email 3WA</th>
                        <th>Rôle</th>
                        <th>Inscrit depuis</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                    
                        <tr>
                            <td>{{ user.firstname }} {{ user.lastname }}</td>
                            <td>{{ user.email3wa }}</td>
                            <td>
                                {% if 'ROLE_ADMIN' in user.roles %}
                                    Admin
                                {% elseif 'ROLE_INSTRUCTOR' in user.roles %}
                                    Formateur {# {% if user.isReferent %} Référent {% endif %} #}
                                {% else %}
                                   Etudiant {# ( {{ user.getLinksSessionStudent()[0].session.name }} ) #}
                                {% endif %}
                            </td>
                            <td>{{ user.createdAt | date('d/m/Y') }}</td>
                            <td>
                                <button class="editRoleBtn greyButton" data-user="{{ user.id }}">Détails</button>
                                <button class="editRoleBtn greyButton" data-user="{{ user.id }}" data-role="{{ user.roles[0] }}">Changer le rôle</button>
                            </td>
                        </tr>
                        
                    {% endfor %}
                </tbody>
            </table>
        </section>

        <div id="roleUpdaterModale" class="hideRoleUpdaterModale">
            <main>
                <select id="roleChoice">
                    <option value="ROLE_STUDENT">Etudiant</option>
                    <option value="ROLE_INSTRUCTOR">Formateur</option>
                    <option value="ROLE_ADMIN">Admin</option>
                </select>
                <p>
                    <button id="roleUpdaterModalCloseBtn">
                        Annuler
                    </button>
                    <button id="updateRoleBtn" data-user="" data-role="">Valider</button>
                </p>
            </main>
        </div>

    </main>

{% endblock %}

{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="{{ asset('js/admin/tableSorter.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/admin/roleUpdater.js') }}"></script>
{% endblock %}