{% extends 'base.html.twig' %}

{% block title %}Qcms réalisés{% endblock %}

{% block stylesheets %}
    <link href="{{asset('css/student/qcmsDone.css')}}" rel="stylesheet">
{% endblock %}

{% block body %}

    <div class="qcm">
        <h1>QCM A FAIRE</h1>

        <div class="div_name">
            <p class="nom">
                {{ 'module.name'|trans }} :
                {{ titleModule }}
            </p>
            <p class="nom">
                {{ 'qcm.name'|trans }} :
                {{ nameQcmInstance }}
            </p>
        </div>
        <div class="premierediv">
            <div class="diff">
                <p>{{ 'difficulty.easy'|trans }}</p>
                <img src="{{asset('build/images/trefle_facile_bon_vert.png')}}" alt="facile">
            </div>
            <div class="diff">
                <p>{{ 'difficulty.medium'|trans }}</p>
                <img src="{{asset('build/images/trefle_moyen_bon_vert.png')}}" alt="moyen">
            </div>
            <div class="diff">
                <p>{{ 'difficulty.difficult'|trans }}</p>
                <img src="{{asset('build/images/trefle_difficile_bon_vert.png')}}" alt="difficile">
            </div>
        </div>

        <form action="{{ path('student_qcmToDo', { 'qcmInstance': idQcmInstance }) }}">
            {% for question in questionsAnswers %}

                <p class="question"><span class="numeroform">1</span>
                    {{ question.libelle }}
                </p>
                {% for answer in question.answers %}
                    {% if question.responce_type == 'radio'%}
                        {% if question.difficulty == 'Difficile' %}
                            <img src="{{asset('build/images/trefle_difficile_bon_vert.png')}}" alt="difficile">
                        {% elseif question.difficulty == 'Moyen' %}
                            <img src="{{asset('build/images/trefle_difficile_bon_vert.png')}}" alt="difficile">
                        {% else %}
                            <img src="{{asset('build/images/trefle_difficile_bon_vert.png')}}" alt="difficile">
                        {% endif %}
                            <input type="radio" for='{{ answer.id}}' name="{{ question.id }}" value="{{ answer.id }}">
                            <label for="{{ answer.id }}">{{ answer.libelle }}</label>
                    {% else %}
                        <input type="checkbox" for='{{ answer.id}}' name="{{question.id}}[]" value="{{ answer.id }}">
                        <label for="{{ answer.id }}">{{ answer.libelle }}</label>
                    {% endif %}

                {% endfor %}
            {% endfor %}
            <input class="valid" type="submit" value="J'ai fini mon qcm">
        </form>

    </div>
{% endblock %}
