{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Register</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.first_name) }}
        {{ form_row(registrationForm.last_name) }}
        {{ form_row(registrationForm.birth_date) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.id_moodle) }}
        {{ form_row(registrationForm.roles) }}
        <button type="submit" class="btn">{{ 'button.toRegister'|trans }}</button>
    {{ form_end(registrationForm) }}
{% endblock %}
